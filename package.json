{
  "name": "application",
  "version": "1.0.0",
  "description": "A few words about this application.",
  "author": "Tej Kahlon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tpkahlon/npm-app-b4"
  },
  "bugs": "https://github.com/tpkahlon/npm-app-b4/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "gulp": "gulp",
    "copy": "mkdirp dist/js/vendor -p && mkdirp dist/css/vendor -p && mkdirp dist/fonts -p && run-s vendor_fonts vendor_argus_fonts vendor_css vendor_js",
    "vendor_css": "copyfiles -f app/styles/*.css dist/css/vendor",
    "vendor_js": "copyfiles -f app/scripts/*.js dist/js/vendor",
    "vendor_fonts": "copyfiles -f node_modules/font-awesome/fonts/**/*.* dist/fonts",
    "vendor_argus_fonts": "copyfiles -f app/fonts/**/*.* dist/fonts",
    "styles": "run-s lint-scss scss autoprefixer",
    "scss": "node-sass --output-style compressed -o dist/css app/sass",
    "lint-scss": "stylelint app/sass/**/*.scss --syntax scss || true",
    "autoprefixer": "postcss --no-map -u autoprefixer -r dist/css/*.css",
    "scripts": "run-s js-transform lint uglify",
    "js-transform": "mkdirp dist/js -p && babel app/js/custom.js -o dist/js/custom.js",
    "lint": "eslint app/js/custom.js --fix || true",
    "uglify": "uglifyjs dist/js/custom.js -co dist/js/custom.js",
    "html": "pug --pretty app/pug/pages/*.pug -o dist && run-s beautify",
    "minifier": "html-minifier --input-dir dist/ --output-dir dist/ --file-ext html --collapse-whitespace --remove-comments --minify-js --minify-css",
    "beautify": "js-beautify -qrtf ./dist/*.html",
    "serve": "browser-sync start --server --serveStatic dist --files \"dist/css/*.css, dist/js/*.js, **/*.html, app/pug/pages/*.pug, dist/images/*.*, !node_modules\"",
    "all": "run-s clean copy html styles scripts watch",
    "watch:css": "onchange \"app/sass\" -- run-s styles",
    "watch:js": "onchange \"app/js\" -- run-s scripts",
    "watch:html": "onchange \"app/pug/_includes\" \"app/pug/_layouts\" \"app/pug/_partials\" \"app/pug/pages\" -- run-s html",
    "watch:images": "onchange \"app/images\" -- run-s gulp",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s all"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.13.0",
    "copyfiles": "^1.2.0",
    "eslint": "^3.18.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^5.0.0",
    "graceful-fs": "^4.1.11",
    "gulp": "^3.9.1",
    "gulp-imagemin": "^3.3.0",
    "html-minifier": "^3.5.3",
    "imagemin-gifsicle": "^5.2.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-optipng": "^5.2.1",
    "imagemin-svgo": "^5.2.2",
    "js-beautify": "^1.6.12",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.0.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "stylelint": "^7.9.0",
    "uglify-js": "^3.0.26",
    "yarn": "^1.3.2"
  }
}
